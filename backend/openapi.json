  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 123
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          },
          "name": {
            "type": "string",
            "example": "Demo User"
          },
          "profilePicture": {
            "type": "string",
            "format": "uri",
            "nullable": true,
            "example": "https://example.com/avatar.png"
          },
          "authProvider": {
            "type": "string",
            "description": "Authentication provider used for this account.",
            "example": "google"
          },
          "isDemo": {
            "type": "boolean",
            "example": false
