                          "purchasePrice": { "type": "number" },
                          "purchaseDate": { "type": "string", "format": "date" },
                          "sector": { "type": ["string", "null"] },
                          "assetClass": { "type": ["string", "null"] },
                          "createdAt": { "type": "string", "format": "date-time" },
                          "updatedAt": { "type": "string", "format": "date-time" }
